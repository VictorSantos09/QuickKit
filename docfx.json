{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "**/*.csproj"
          ],
          "excludes":[
            "**/obj/**",
            "**/bin/**",
            "**QuickKit.Sample.API/**",
            "**QuickKit.Sample.Console/**",
            "**QuickKit.Tests/**"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml,xml}"
        ],
        "exclude": [
          "_site/**",
          "obj/**",
          "bin/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "QuickKit",
      "_appTitle": "QuickKit",
      "_enableSearch": true,
      "pdf": true
    }
  }
}