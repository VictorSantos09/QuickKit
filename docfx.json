{
  "metadata": [
    {
      "src": [
        {
          "src": "./",
          "files": ["**/*.csproj"]
        }
      ],
      "dest": "./docs/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml,xml}"],
        "exclude": [
          "_site/**",
          "QuickKit.Sample.API",
          "QuickKit.Sample.Console",
          "QuickKit.Tests"
        ]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "./docs",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appName": "QuickKit",
      "_appTitle": "QuickKit",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
